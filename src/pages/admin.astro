<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <title>Content Management | Blog Demo</title>
  </head>
  <body>
    <!-- Dashboard script-->
    <script is:inline type="module" src="/src/content/cms.ts"></script>
    <!-- Netlify identity -->
    <script
      is:inline
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <!-- Customize the netlify identity widget to refresh on logout preventing users from using the cms when not logged in and then seeing an error -->
    <script is:inline>
      netlifyIdentity.on("logout", () => location.reload());
    </script>
  </body>
</html>
